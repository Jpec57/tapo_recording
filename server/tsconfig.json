{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node", // Ensure module resolution is set to 'node'
      "strict": true,
      "lib": ["es2017", "dom"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*", "public"],
    "exclude": ["node_modules"]
  }